---
const { Name, Link } = Astro.props
---
<a
            target="_blank"
            href={Link}
            class="original-button">{Name}
</a>

<style>
    .original-button {
      display: flex;
      align-items: center;
      justify-content: center;
      line-height: 1;
      text-decoration: none;
      color: #000000;
      font-size: 18px;
      border-radius: 0px;
      width: 200px;
      height: 40px;
      position: relative;
      transition: 0.3s;
      background-color: #ffffff;
      @apply rounded-lg;
    }
  
    .original-button::before,
    .original-button::after {
      content: "";
      display: block;
      position: absolute;
      border: 1px solid #000000;
      width: 100%;
      height: 100%;
      transition: 0.3s;
      @apply rounded-lg;
    }
  
    .original-button::before {
      top: -2px;
      left: -2px;
      @apply rounded-lg;
    }
  
    .original-button::after {
      top: 2px;
      left: 2px;
      @apply rounded-lg;
    }
  
    .original-button:hover::before,
    .original-button:hover::after {
      top: 0;
      left: 0;
      @apply rounded-lg;
    }
  </style>
  